term screen-256color
startup_message off
bell_msg "Bell in window %n^G"
vbell on
defscrollback 10000
altscreen on

escape ^z^z
bind ^x

backtick 0 1 0 "$HOME/.screen/backtick.py" "$STY" --left-padding 40 --fqdn
hardstatus alwayslastline "%{= bw}%02c:%02s%{-}%0`"

screen -t top 99 top -d1
chdir
screen
