windowlist title '%{+ub}Num  Title%020=  Hardstatus%-07=  Flags%{-}'
windowlist string '%3n  %t%020=  %h%-07=  %f'
bell_msg "Bell in window %n^G"
vbell on
altscreen on
defencoding UTF-8
defutf8 on
cjkwidth off
defscrollback 10000
bind ^x
escape ^z^z
hardstatus alwayslastline "%{= bw}%02c:%02s%{-}%0`"
startup_message off
backtick 0 1 0 "$HOME/.screen/backtick.py" "$STY" --left-padding 40 --fqdn
term screen.putty-256color

screen -t top 99 top -d1
chdir
screen
